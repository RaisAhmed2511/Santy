<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_exercice_page_upload_button"
            android:background="@color/turquoise"
            android:textColor="@color/white"
            style="@style/TitleTextStyle"
            android:padding="@dimen/default_margin"/>

        <ImageView
            android:id="@+id/preview_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/trending2"/>

    </LinearLayout>

    <EditText
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/default_margin"
        android:hint="@string/add_exercice_page_name_input"
        android:paddingLeft="@dimen/item_margin"
        style="@style/DefaultTextStyle"/>

    <EditText
        android:id="@+id/description_input"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/default_margin"
        android:hint="@string/add_exercice_page_description_input"
        android:paddingLeft="@dimen/item_margin"
        style="@style/DefaultTextStyle"/>

    <Spinner
        android:id="@+id/difficulty_spinner"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/default_margin"
        android:entries="@array/add_exercice_page_spinner_input"
        android:paddingLeft="@dimen/item_margin" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/gris"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/add_exercice_page_confirm_button"
        android:textColor="@color/white"
        android:textSize="24dp"
        />

</LinearLayout>